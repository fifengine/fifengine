<Panel title="Object selector" min_size="200,500">
	<VBox name="vertical_wrapper" hexpand="1" vexpand="1" padding="5">
		<VBox vexpand="0" hexpand="1">
			<Button name="toggle_mode" text="Toggle Mode" />
			<HBox>
				<TextField name="search_field" />
				<Button name="search_button" text="Search" hexpand="0"/>
			</HBox>
		</VBox>
	
		<ScrollArea vexpand="1" name="namespace_area">
			<ListBox name="namespace_list" />		
		</ScrollArea>

		<VBox name="text_mode_wrapper" hexpand="1" vexpand="2">
			<ScrollArea name="object_area" horizontal_scrollbar="0" hexpand="2" vexpand="4">
				<ListBox name="object_list" />
			
			</ScrollArea>
			<Spacer size="1"/>
			<Container size="150,150" position_technique="center:center" max_size="150,150" min_size="150,150" vexpand="0" border_size="2" base_color="50,50,50" opaque="1" >
				<Icon name="preview_icon" />
			</Container>
		</VBox>
		<VBox name="image_mode_wrapper" vexpand="4" hexpand="2">
			<ScrollArea name="object_area" horizontal_scrollbar="0" hexpand="1" vexpand="2">
				<VBox name="object_list" />
			</ScrollArea>
		</VBox>
	</VBox>
	<HBox name="horizontal_wrapper" hexpand="1" vexpand="1" padding="5">
		<VBox hexpand="1" vexpand="1" max_size="200,200" size="200,200">
			<Button name="toggle_mode" text="Toggle Mode" />
			<HBox>
				<TextField name="search_field" />
				<Button name="search_button" text="Search" hexpand="0"/>
			</HBox>
		
			<ScrollArea name="namespace_area">
				<ListBox name="namespace_list" />		
			</ScrollArea>
		</VBox>

		<HBox name="text_mode_wrapper">
			<ScrollArea name="object_area" horizontal_scrollbar="0" hexpand="3" >
				<ListBox name="object_list" />
			
			</ScrollArea>
			<Container size="150,150" max_size="150,150" min_size="150,150" vexpand="0" base_color="50,50,50" opaque="1" >
				<Icon name="preview_icon" />
			</Container>
		</HBox>
		<HBox name="image_mode_wrapper" padding="2" hexpand="4" vexpand="2">
			<ScrollArea name="object_area" vertical_scrollbar="0">
				<HBox name="object_list" />
			</ScrollArea>
		</HBox>
	</HBox>
</Panel>
